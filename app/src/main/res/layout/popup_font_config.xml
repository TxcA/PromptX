<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/bg_round_block_white_top"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingBottom="12dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:text="字体配置"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/v_config_text_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文本颜色"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <com.skydoves.colorpickerview.AlphaTileView
            android:id="@+id/atv_font_text_color"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="32dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/v_config_float_background_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="背景颜色"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <com.skydoves.colorpickerview.AlphaTileView
            android:id="@+id/atv_float_background_color"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="32dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="是否加粗"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/sm_font_text_bold"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="32dp"
            android:backgroundTint="@color/colorPrimary"
            app:backgroundTint="@color/colorPrimary" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="是否斜体"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/sm_font_text_italic"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="32dp"
            android:backgroundTint="@color/colorPrimary"
            app:backgroundTint="@color/colorPrimary" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="窗体宽度"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <com.itxca.promptx.seekbar.BubbleSeekBar
            android:id="@+id/bsb_float_width"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginStart="32dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="窗体高度"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <com.itxca.promptx.seekbar.BubbleSeekBar
            android:id="@+id/bsb_float_height"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginStart="32dp" />
    </LinearLayout>
</LinearLayout>