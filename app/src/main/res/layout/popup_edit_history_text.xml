<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/bg_round_block_white_top"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivHistoryDelete"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:padding="12dp"
            android:src="@mipmap/icon_history_delete"
            app:tint="@color/colorPrimary" />

        <TextView
            android:id="@+id/tv_edit_history_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="12dp"
            android:text="编辑"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/iv_history_save"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:padding="12dp"
            android:src="@mipmap/icon_history_save"
            app:tint="@color/colorPrimary" />

    </LinearLayout>

    <EditText
        android:id="@+id/et_edit_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round_stroke_pink"
        android:gravity="top|start"
        android:maxLines="12"
        android:minLines="5"
        android:padding="8dp"
        android:textColor="@color/colorPrimary"
        android:textCursorDrawable="@drawable/edit_cursor"
        android:textSize="14sp" />
</LinearLayout>